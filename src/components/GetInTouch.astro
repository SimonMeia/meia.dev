const {id, cl} = Astro.props
---

<div id={id} class={cl}>
    <h2 class="text-4xl mb-4 font-clashdisplay">Get in touch ! </h2>
    <h3 class="text-2xl text-orange font-clashdisplay">Let's work together</h3>
    <p class="mb-12">
        Are you intersted in working with me ? I would be happy to take part in you project ! Feel free to contact me.
    </p>
    <a href="mailto:simon@meia.dev" class="font-clashdisplay block w-52 mx-auto p-4 border-orange border-solid border-2 rounded text-center text-orange transition ease-in-out hover:text-black hover:bg-orange">
        Write me an email
    </a>
</div>
