---
import NavBar from "../components/NavBar.astro";
import "../base.css";
const { title } = Astro.props;
const year = new Date().getFullYear();
---

<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
            rel="stylesheet"
        />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="Portfolio of Simon Meia, a web developer specialized in Vue.js, Express.js and Tailwind css">
        <meta name="generator" content={Astro.generator} />
        <script
            src="https://cdn.counter.dev/script.js"
            data-id="d7406b1d-5772-477a-b13d-6c7b096aa8ad"
            data-utcoffset="1"
        ></script>
        <title>{title}</title>
    </head>
    <body class="font-dmsans text-white bg-black container mx-auto flex flex-col h-screen justify-between px-6">
        <NavBar />
        <section class="container-main mb-auto ">
            <slot />
        </section>
        <footer class="mt-16 pb-4 flex-col md:flex-row flex items-center justify-between">
            <div class="space-x-4">
                <a href="https://github.com/SimonMeia" aria-label="Link to Github profile" target="_blank">
                    <img src="/assets/icons/github.svg" class="w-8 inline" alt="Linkedin icon" />
                </a>
                <a href="https://www.linkedin.com/in/simon-meia/" aria-label="Link to Linkedin profile" target="_blank">
                    <img src="/assets/icons/linkedin.svg" class="w-8 inline" alt="Linkedin icon" />
                </a>
                <a href="https://www.behance.net/simon-meia/" aria-label="Link to Behance profile" target="_blank">
                    <img src="/assets/icons/behance.svg" class="w-8 inline" alt="Behance icon" />
                </a>
            </div>
            <div class="text-center">
                Designed & Built by Simon Meia in {year}
            </div>
        </footer>
    </body>
</html>
