---
import MainLayout from "../layouts/MainLayout.astro";

let projects = await Astro.glob("./projects/*.{md, mdx}");
---

<MainLayout title="Projects">
    <h1>Projects</h1>
    <div>
        {
            projects.map((project) => (
                <div>
                    <a href={project.url}>
                        {project.frontmatter.title}
                    </a>
                </div>
            ))
        }
    </div>
</MainLayout>
